def node_require(script)
  # Resolve script with node to allow for hoisting
  require Pod::Executable.execute_command('node', ['-p',
    "require.resolve(
      '#{script}',
      {paths: [process.argv[1]]},
    )", __dir__]).strip
end

require File.join(File.dirname(`node --print "require.resolve('expo/package.json')"`), "scripts/autolinking")

node_require('react-native/scripts/react_native_pods.rb')
node_require('react-native-permissions/scripts/setup.rb')

platform :ios, '16.0' #min_ios_version_supported
prepare_react_native_project!

Pod::UI.puts "Configuring Pod with statically linked Frameworks".green
use_frameworks! :linkage => :static

setup_permissions([
  "Camera",
  "Microphone",
  "Notifications",
  "PhotoLibrary"
])

# Conditional Intune MAM support
intune_enabled = ENV['INTUNE_ENABLED'] == 'true' || ENV['INTUNE_ENABLED'] == '1'

if intune_enabled
  puts "üîê Intune MAM features enabled"
end

config = use_native_modules!

target 'Mattermost' do
  # Pods for Mattermost

  use_expo_modules!

  use_react_native!(
    :path => config[:reactNativePath],
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  pod 'React-jsi', :path => '../node_modules/react-native/ReactCommon/jsi', :modular_headers => true
  pod 'React-jsc', :path => '../node_modules/react-native/ReactCommon/jsc', :modular_headers => true
  pod 'simdjson', path: '../node_modules/@nozbe/simdjson', :modular_headers => true
  pod 'Gekidou', :path => './Gekidou'
  pod 'CocoaLumberjack', :modular_headers => true
  pod 'TurboLogIOSNative', :git => 'https://github.com/larkox/react-native-turbo-log-ios-native.git', :modular_headers => true

  # Conditional Intune MAM pod (internal builds only)
  if intune_enabled
    pod 'mattermost-intune', :path => '../libraries/@mattermost/intune'
  end
end



post_install do |installer|
    # https://github.com/facebook/react-native/blob/main/packages/react-native/scripts/react_native_pods.rb#L197-L202
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false
    )

  # ‚îÄ‚îÄ‚îÄ Alamofire iOS 26 SDK compatibility patch ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
  # Renames duplicate local variable declarations in SessionDelegate.swift that
  # cause "invalid redeclaration" errors when building with Xcode 26.
  # Handles both 'allHeaders' and 'sizeString' (and any other variables added
  # to PATCH_VARS below).
  session_delegate = File.join(installer.sandbox.root,
                               'Alamofire/Source/Core/SessionDelegate.swift')

  if File.exist?(session_delegate)
    content = File.read(session_delegate)

    # Variables known to be redeclared in Alamofire 5.x under iOS 26 SDK
    PATCH_VARS = %w[allHeaders sizeString].freeze

    PATCH_VARS.each do |var_name|
      marker      = "af_#{var_name}_patched"
      decl_regex  = /\b(?:let|var)\s+#{Regexp.escape(var_name)}\b/
      usage_regex = /\b#{Regexp.escape(var_name)}\b/

      if content.include?(marker)
        puts "‚è≠Ô∏è  Alamofire SessionDelegate.swift: '#{var_name}' already patched, skipping"
        next
      end

      unless content.match?(decl_regex)
        puts "‚è≠Ô∏è  Alamofire SessionDelegate.swift: no '#{var_name}' declarations found, skipping"
        next
      end

      count        = 0
      current_name = nil
      lines        = content.split("\n")

      new_lines = lines.map do |line|
        if line =~ decl_regex
          count        += 1
          current_name  = "af#{var_name.capitalize}#{count}"
          line.gsub(usage_regex, current_name)
        elsif current_name && line =~ usage_regex
          line.gsub(usage_regex, current_name)
        else
          line
        end
      end

      # Append marker comment so idempotency check works on cached Pods
      new_lines << "// #{marker}"
      content = new_lines.join("\n")

      puts "‚úÖ Patched Alamofire SessionDelegate.swift: " \
           "'#{var_name}' ‚Üí #{count} unique declaration(s)"
    end

    File.write(session_delegate, content)
  end

    installer.pods_project.targets.each do |t|
      if t.name == 'TurboLogIOSNative'
         t.source_build_phase.files.each do |file|
           if file.file_ref.path.end_with?('.modulemap')
             file.settings = { 'COMPILER_FLAGS' => '' }
           end
         end
       end
      t.build_configurations.each do |bc|
        bc.build_settings['SWIFT_VERSION']        = '5.9'
        bc.build_settings['OTHER_LDFLAGS']        = ['$(inherited)', '-ObjC']
        bc.build_settings['STRIP_SWIFT_SYMBOLS']  = 'NO'
        bc.build_settings['ENABLE_BITCODE']       = 'NO'
      end
    end


    # make sure the main app is NOT extension-only
    app_target = installer.aggregate_targets.flat_map(&:user_project).flat_map(&:targets).find { |t| t.name == 'Mattermost' }
    if app_target
      app_target.build_configurations.each do |c|
        c.build_settings.delete('APPLICATION_EXTENSION_API_ONLY')
      end
    end

    # Fix TurboLogIOSNative module.modulemap issue
  installer.pods_project.targets.each do |target|
    if target.name == 'TurboLogIOSNative'
      target.source_build_phase.files.each do |build_file|
        if build_file.file_ref && build_file.file_ref.path.end_with?('module.modulemap')
          target.source_build_phase.files.delete(build_file)
        end
      end
    end
  end

  # Fix react-native-paste-input C++ compilation on iOS 26 SDK
  installer.pods_project.targets.each do |target|
    if target.name == 'react-native-paste-input'
      target.build_configurations.each do |config|
        config.build_settings['CLANG_CXX_LANGUAGE_STANDARD'] = 'c++20'
        config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= ['$(inherited)']
      end
    end
  end

end


